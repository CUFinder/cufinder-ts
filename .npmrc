# NPM Configuration for @cufinder/cufinder-ts

# Registry configuration
registry=https://registry.npmjs.org/

# Scope configuration for @cufinder packages
@cufinder:registry=https://registry.npmjs.org/

# Authentication (add your npm token here for publishing)
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Package publishing configuration
access=public

# Install configuration
save-exact=true
save-prefix=
package-lock=false

# Performance optimizations
prefer-offline=true
cache-max=86400000
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Security
audit-level=moderate
fund=false

# Development
engine-strict=true
